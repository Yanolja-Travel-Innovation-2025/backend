{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "NODE_ENV=development node index.js",
    "dev:watch": "nodemon index.js",
    "prod": "NODE_ENV=production node index.js",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "seed": "node scripts/seedBadges.js",
    "seed:partners": "node scripts/seedPartners.js",
    "seed:all": "npm run seed && npm run seed:partners",
    "metadata": "node scripts/generateSampleMetadata.js",
    "generate:metadata": "node scripts/generateBadgeMetadata.js",
    "blockchain:local": "npx hardhat node",
    "blockchain:test": "npx hardhat run scripts/test-local.js --network localhost",
    "blockchain:deploy": "npx hardhat run scripts/deploy.js",
    "blockchain:deploy:amoy": "npx hardhat run scripts/deploy.js --network amoy",
    "blockchain:verify": "npx hardhat verify --network amoy",
    "docker:build": "docker build -t jeju-passport-backend .",
    "docker:run": "docker run -p 4000:4000 --env-file .env jeju-passport-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:build": "docker-compose up -d --build",
    "docker:logs": "docker-compose logs -f",
    "clean:logs": "rm -rf logs/*",
    "clean:artifacts": "rm -rf artifacts cache typechain",
    "clean:all": "npm run clean:logs && npm run clean:artifacts && rm -rf node_modules"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.7.1",
    "express": "^4.18.2",
    "form-data": "^4.0.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "hardhat": "^2.25.0"
  }
}
